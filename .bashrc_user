#!/bin/bash

[[ -f "$HOME/.nix-profile/etc/profile.d/nix.sh" ]] && \
    . $HOME/.nix-profile/etc/profile.d/nix.sh

systemctl --user import-environment DISPLAY

if type -p startx &> /dev/null; then
    if [[ "$(tty)" = "/dev/tty1" ]]; then
        while true; do
            ssh-agent startx
            read
        done
    fi
fi
